package main

import (
	"encoding/json"
	"fmt"
)

// Block represents a blockchain block structure
type Block struct {
	BaseFeePerGas    string   `json:"baseFeePerGas"`
	Difficulty       string   `json:"difficulty"`
	ExtraData        string   `json:"extraData"`
	GasLimit         string   `json:"gasLimit"`
	GasUsed          string   `json:"gasUsed"`
	Hash             string   `json:"hash"`
	LogsBloom        string   `json:"logsBloom"`
	Miner            string   `json:"miner"`
	MixHash          string   `json:"mixHash"`
	Nonce            string   `json:"nonce"`
	Number           string   `json:"number"`
	ParentHash       string   `json:"parentHash"`
	ReceiptsRoot     string   `json:"receiptsRoot"`
	Sha3Uncles       string   `json:"sha3Uncles"`
	Size             string   `json:"size"`
	StateRoot        string   `json:"stateRoot"`
	Timestamp        string   `json:"timestamp"`
	Transactions     []string `json:"transactions"`
	TransactionsRoot string   `json:"transactionsRoot"`
	Uncles           []string `json:"uncles"`
}

// In-memory storage maps for blocks and block numbers
var blockStore = make(map[string]Block)
var blockNumberStore = make(map[string]string)

// StoreBlock stores a block in the block store and indexes it by number
func StoreBlock(block Block) {
	blockStore[block.Hash] = block
	blockNumberStore[block.Number] = block.Hash
	fmt.Printf("Block with hash %s and number %s stored successfully.\n", block.Hash, block.Number)
}

// GetBlockByHash retrieves a block by its hash
func GetBlockByHash(hash string) (Block, bool) {
	block, exists := blockStore[hash]
	return block, exists
}

// GetBlockByNumber retrieves a block by its number
func GetBlockByNumber(number string) (Block, bool) {
	hash, exists := blockNumberStore[number]
	if !exists {
		return Block{}, false
	}
	return GetBlockByHash(hash)
}

